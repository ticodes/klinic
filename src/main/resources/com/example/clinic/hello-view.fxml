<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="715" prefWidth="930" spacing="20.0" style="-fx-background-color: #DCC7AA;" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.clinic.MainController">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label style="-fx-font-size: 24px; -fx-text-fill: #333333; -fx-font-weight: bold;" text="Добро пожаловать в ветеринарную клинику!" />

    <VBox alignment="CENTER" fillWidth="true" prefHeight="97.0" prefWidth="890.0" spacing="20.0">
        <children>
            <TextField fx:id="loginField" prefHeight="34.0" prefWidth="400.0" promptText="Логин" style="-fx-prompt-text-fill: #999999; -fx-background-color: #FFFFFF;">
                <VBox.margin>
                    <Insets top="5.0" />
                </VBox.margin>
            </TextField>

            <PasswordField fx:id="passwordField" prefHeight="34.0" prefWidth="400.0" promptText="Пароль" style="-fx-prompt-text-fill: #999999; -fx-background-color: #FFFFFF;">
                <VBox.margin>
                    <Insets />
                </VBox.margin>
            </PasswordField>
        </children>
      <VBox.margin>
         <Insets />
      </VBox.margin>
      <padding>
         <Insets left="250.0" right="235.0" />
      </padding>
    </VBox>

    <Button fx:id="Enter" prefHeight="34.0" prefWidth="84.0" style="-fx-background-color: #6B7A8F; -fx-text-fill: #FFFFFF;" text="Войти">
        <font>
            <Font size="14.0" />
        </font>
    </Button>

    <Button fx:id="Registration" style="-fx-background-color: #F7882F; -fx-text-fill: #FFFFFF;" text="Зарегистрироваться" />

</VBox>
